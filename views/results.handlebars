    {{!-- container for spacing --}}
    <div class="container">
        {{!-- everything in the header is a row --}}
        <div class="row">

            {{!-- logo block--}}
            <div class="col-xs-5">
                <h1>room<span class="bracket">[</span>ease<span class="bracket">]</span></h1>
            </div>

            {{!-- blank column for nicer headerspacing--}}
